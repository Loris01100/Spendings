{% extends 'base.html.twig' %}

{% block title %}
    {{ achatToEdit is defined ? 'Modifier un achat' : 'Ajouter un achat' }}
{% endblock %}

{% block body %}
<style>
        body{
            margin: 0;
            padding: 0;
        }
        h2{
            font-size: 30px;
            position: relative;
            margin: 50px;
            top: -30px;
        }
        form{
            display: flex;
            justify-content: center;
            align-items: center;
            height: 450px;
            flex-direction: column;
            gap: 10px;
            top: -30px;
            position: relative;
        }
        .container{
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            background-color: #3c8062;
            border-radius: 25px;
            position: relative;
            margin: 40px;
            border: 1px solid #52b788;
            padding: 40px;
            width: 20%;
            left: auto;
            height: 450px;
            z-index: 0;
        }
        .center{
            position: fixed;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        input, select, textarea{
            width: 100%;
            height: 36px;
            border-radius: 25px;
            border: 2px solid #333;
            box-sizing: border-box;
            background-color: #d8f3dc;

            display: flex;
            justify-content: center;
            align-items: center;
        }

        input:focus {
            outline: none;
            border-color: gray;
            background-color: white;
        }
        input[type="text-area"]{
            height: 20px;
            border-radius: 25px;
        }
        button{
            background-color: #d8f3dc;
            border-radius: 25px;
            border: 1px solid black;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 170px;
            margin: 0;
            top: 10px;
            position: relative;
            height: 50px;
            font-size: 20px;
        }
        button:focus{
            background-color: #52b788;
            border-color: white;
            font-style: italic;
        }
        .scrolling-word {
            position: absolute;
            white-space: nowrap;
            font-weight: bold;
            top: calc(50% - 1em); /* Centré verticalement par défaut */
        }
        nav{
            margin: 0;
            left: 0;
            top: 0;
            position: absolute;
            width: 100%;
            height: 10%;
            font-size: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 200px;
            color: #d8f3dc;
            z-index: 1;
        }

        a{
            color: #d8f3dc;
            text-decoration: none;
        }

        a:hover{
            text-decoration: underline;
        }
    </style>
    <div class="center">
        <div class="container">
            <h2>{{ achatToEdit is defined ? 'Modifier un achat' : 'Ajouter un achat' }}</h2>

            {{ form_start(form) }}
            {{ form_row(form.description) }}
            {{ form_row(form.montant) }}
            {{ form_row(form.date_achat) }}
            {{ form_row(form.categorie) }}

            {{ form_end(form) }}

            <a href="{{ path('app_achat_list_get') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
        </div>
    </div>
    {{ dump(form) }}

{% endblock %}

