    <script>
        const words = ["Symfony", "CrÃ©ativitÃ©", "Technologie", "LibertÃ©",
            "ğŸ¤™Eddy;)ğŸ¤™", "ğŸ‘ŒEfficaceğŸ‘Œ", "ğŸ“OrganisÃ©ğŸ“", "ğŸ”ƒAbonnementsğŸ”ƒ", "ğŸ’¶EconomiesğŸ’¶", "ğŸ’¸ArgentsğŸ’¸", "ğŸ¤‘DÃ©pensesğŸ¤‘", "ğŸ SpendingsğŸ ", "ğŸ’²EpargneğŸ’²"];

        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function createScrollingWord() {
            const word = words[Math.floor(Math.random() * words.length)];
            const fontSize = getRandomInt(16, 48); // Taille alÃ©atoire entre 16px et 48px
            const direction = Math.random() < 0.5 ? 'left' : 'right';
            const speed = getRandomInt(5, 15); // Vitesse de dÃ©placement
            const startTop = getRandomInt(10, window.innerHeight - 60); // Position verticale

            const el = document.createElement('div');
            el.className = 'scrolling-word';
            el.style.fontSize = fontSize + 'px';
            el.textContent = word;
            el.style.top = startTop + 'px';
            el.style.color = 'white';
            el.style.zIndex = -1;
            el.style.position = "fixed";

            if (direction === 'left') {
                el.style.left = '100%';
            } else {
                el.style.right = '100%';
            }

            document.body.appendChild(el);

            const distance = window.innerWidth + el.offsetWidth;
            const duration = distance / speed * 100; // ajuster vitesse

            el.animate([
                direction === 'left' ? { transform: `translateX(0)` } : { transform: `translateX(0)` },
                direction === 'left' ? { transform: `translateX(-${distance}px)` } : { transform: `translateX(${distance}px)` }
            ], {
                duration: duration,
                iterations: 1,
                easing: 'linear'
            }).onfinish = () => {
                el.remove();
            };
        }

        setInterval(createScrollingWord, 2000); // CrÃ©e un nouveau mot chaque seconde
    </script>
